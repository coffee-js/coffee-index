
*
  box-sizing border-box

body
  margin 0px
  font-family 'Lato', sans-serif
  font-weight 500
  line-height 20px

a
  color hsl(240,80,70)
  opacity 0.6
  background hsl(240,0,98)
  white-space nowrap
  
  &:link
    text-decoration none
    font-family 'wenquanyi micro hei mono', monospace
    font-size 14px
    padding 0px 4px
    margin 0px 4px
    box-shadow 0px 0px 8px hsl(240,80,90)

#nav
  position fixed
  top 10%
  line-height 30px
  font-size 24px
  font-weight 300

#nav > div
  padding 2px 6px
  text-align center
  margin 8px
  border-radius 4px

#article
  width 100%
  height 100%

#article > div
  width 100%
  min-height 100%
  padding 80px 40px 200px 300px

pre
  background hsl(0,50,60)
  color white
  padding 6px


paint(a, b)
  background hsl(a, 90, b)
  box-shadow 0px 1px 10px hsl(a, 90, b)

.home
  paint 240 100
.slide
  paint 270 95
.video
  paint 340 91
.guide
  paint 30 85
.blogs
  paint 80 80
.projects
  paint 130 86
.editor
  paint 0 80
.talk
  paint 230 90
.chat
  paint 280 96

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,50)
  border-radius 2px