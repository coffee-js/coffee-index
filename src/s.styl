
*
  box-sizing border-box
  // -webkit-transition-duration 1s
  // -mox-transition-duration 1s
  // transition-duration 1s

body
  margin 0px
  font-family 'Lato', sans-serif
  line-height 20px
  font-weight lighter
  background hsl(0,0,98)

a
  color hsl(240,100,89)
  opacity 0.6
  text-decoration none
  font-family 'wenquanyi micro hei mono', monospace, 'Micosoft Yahei'
  font-size 14px
  display block
  width 0px
  overflow-x visible
  white-space nowrap

  &:hover
    color blue

.title
  letter-spacing 1px
  padding 6px 12px
  border-radius 4px
  color hsl(0,0,80)
  text-overflow ellipsis
  font-size 24px
  font-weight 500
  position fixed
  left 0px
  height 40px

#article
  width 100%
  height 100%

#article > div
  width 100%
  min-height 100%
  padding 80px 140px 200px 250px
  overflow-x hidden
  box-shadow 0px 0px 20px hsl(40,0,80)
  background white

  &:hover

    .title
      // background white
      color hsl(0,0,40)

pre
  color white
  background hsl(0,0,80)
  padding 2px 8px

.home
  top 80px
.slide
  top 120px
.video
  top 160px
.guide
  top 200px
.blogs
  top 240px
.projects
  top 280px
.editor
  top 320px
.talk
  top 360px
.comment
  top 400px

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,50)
  border-radius 2px
